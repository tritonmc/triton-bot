{
  "name": "triton-bot",
  "version": "3.0.0",
  "description": "A bot to verify purchases of Triton",
  "main": "src/index.js",
  "repository": "git@github.com:diogotcorreia/triton-bot.git",
  "author": "Diogo Correia <me@diogotc.com>",
  "license": "GPL-3.0-or-later",
  "private": true,
  "type": "module",
  "files": [
    "knexfile.js",
    "migrations/*",
    "src/*"
  ],
  "devDependencies": {
    "husky": "^9.1.7",
    "nodemon": "^3.1.11",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.0"
  },
  "dependencies": {
    "discord.js": "^14.25.1",
    "knex": "^3.1.0",
    "pg": "^8.17.2",
    "pino": "^10.2.1"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js | pino-pretty -c -l -t",
    "format": "prettier --write \"src/**/*.{js,jsx}\"",
    "prepare": "husky",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback"
  }
}
